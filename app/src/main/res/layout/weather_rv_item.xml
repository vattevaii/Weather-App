<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_drawable2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:text="Data/Time Name"
        android:id="@+id/dateOrTimeTV"
        android:paddingHorizontal="30dp"
        android:textColor="@color/white"
        />

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:id="@+id/stateLL"
     android:orientation="vertical"
     android:layout_alignParentEnd="true"
     android:gravity="center"
     android:layout_marginEnd="5dp"
     android:background="@drawable/gradient_drawable2">
     <ImageView
        android:id="@+id/stateOnthatIV"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_cloud"
        android:textAlignment="center"
        app:tint="@color/white" />

     <TextView
         android:id="@+id/stateOnThatTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="StatusText"
         android:textColor="@color/white"
         android:textSize="10dp" />
 </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/stateLL"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Temperature"
        android:id="@+id/temperatureOnThatTV"/>


</RelativeLayout>